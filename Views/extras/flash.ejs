<% if (success && success.length > 0) { %>
  <div id="successMessage" class="flash-message success">
    <% success.forEach(msg => { %>
      <p><%= msg %></p>
    <% }) %>
    <button type="button" class="close-button">Ã—</button>
    <script>
      setTimeout(function() {
        var successMessage = document.getElementById('successMessage');
        successMessage.style.display = 'none';
      }, 3000);
    </script>
  </div>
<% } %>


  <!-- styling of the flash  -->
  <style>
    .flash-message {
      position: relative;
      padding: 12px;
      border-radius: 4px;
      margin-bottom: 16px;
      display: flex;
      align-items: center;
      justify-content: space-between;
      background-color: #3cc85d;
      color: #fff;
    }
  
    .flash-message p {
      margin: 0;
      line-height: 1.4;
    }
  
    .close-button {
      padding: 4px;
      border: none;
      background-color: transparent;
      color: #ffffff;
      font-size: 18px;
      cursor: pointer;
    }
  
    .close-button:focus {
      outline: none;
    }
  </style>
  
  <script>
    // Close flash messages when the close button is clicked
    const closeButtons = document.querySelectorAll('.close-button');
    closeButtons.forEach(button => {
      button.addEventListener('click', () => {
        const flashMessage = button.closest('.flash-message');
        flashMessage.style.display = 'none';
      });
    });
  </script>
  
<!DOCTYPE html>
<html>

<head>
  <title>Blog View</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

  <style>
    body {
      background: linear-gradient(to right, #73fff6, #00b7ff);
      padding: 20px;
    }
  
    .container {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(300px, 1fr)); 
      grid-gap: 20px;
      border-radius: 10px;
      justify-items: center;
      align-items: flex-start;
      margin-top: 0px;
      width: 90vw;
      height: 75vh;
      background-color: transparent;
      padding: 10px;
       
    }
  
    h1 {
      margin-top: 40px;
      font-size: 30px;
      font-weight: bold;
      color: #000;
      text-align: center;
    }
  
    .blog-post {
      background-color: #f2f2f2;
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
      width: 100%;
      text-align: center;
      margin-top: 20px;
      margin-bottom: 2px;
      position: relative;
    }
  
    .blog-image {
      width: 100%;
      height: 200px; /* Adjust the height as per your preference */
      object-fit: cover;
      border-radius: 5px;
      margin-bottom: 10px;
    }
  
    .blog-title {
      font-size: 20px; /* Adjust the font size as per your preference */
      font-weight: bold;
      margin-bottom: 10px;
    }
  
    .blog-description {
      height: 30px; /* Adjust the height as per your preference */
      max-height: 500px;
      overflow-y: auto;
      font-size: 16px; /* Adjust the font size as per your preference */
    }

    .blog-description::-webkit-scrollbar {
      width: 8px; /* Adjust the width as per your preference */
      background-color: transparent; /* Set the background color of the scrollbar track */
    }

    .blog-description::-webkit-scrollbar-thumb {
      background-color: rgba(0, 0, 0, 0.2); /* Set the color of the scrollbar thumb */
      border-radius: 4px; /* Adjust the border radius as per your preference */
    }
  
    .blog-info {
      display: flex;
      align-items: center;
      justify-content: space-between;
      margin-top: 10px;
      font-size: 12px;
    }
  
    .blog-info p {
      margin: 0;
    }
  
    .line {
      width: 100%;
      height: 1px;
      background-color: #000;
      margin-top: 20px;
      margin-bottom: 20px;
    }
  
    .comment-section {
      display: flex;
      align-items: center;
      margin-top: 10px;
    }
  
    .comment-input {
      flex-grow: 1;
      padding: 5px;
      border: none;
      border-radius: 5px;
      margin-right: 10px;
    }
  
    .comment-icon-button {
      background: none;
      border: none;
      cursor: pointer;
    }
  
    .comment-icon {
      font-size: 20px;
      color: #007bff;
    }
  </style>
  
</head>

<body>
  <%- include('extras/navbarloggedin') %>

  <h1>Blogs</h1>

  <div class="container">
    <%- include('extras/flash') %>
   
    <% blogs.forEach(blog => { %>
      <div class="blog-post card">
        <img class="blog-image card-img-top" src="<%- blog.image %>" alt="Image 1">
        <div class="card-body">
          <h2 class="blog-title card-title"><%- blog.title %></h2>
          <p class="blog-description card-text"><%- blog.description %></p>
          <div class="line"></div>
          <div class="blog-info">
            <p>Posted by: <%- blog.authorName %></p>
          </div>
          <div class="blog-info">
            <p>Created at: <%- moment(blog.createdAt).format('MMMM Do YYYY, h:mm:ss a') %></p>
          </div>
          <div class="comment-section">
            <input type="text" class="comment-input" placeholder="Write a comment...">
            <button type="submit" class="comment-icon-button">
              <i class="fas fa-comment comment-icon"></i>
            </button>
          </div>
        </div>
      </div>
    <% }) %>
  </div>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/js/all.min.js"></script>
</body>

</html>
